<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_activity_container"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    tools:context=".MainActivity">

    <ScrollView
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/newsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:elevation="5dp"
                    android:text="#today"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewVertical"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#dae4ea"
                    android:nestedScrollingEnabled="true"
                    android:orientation="horizontal" />

                <ProgressBar
                    android:id="@+id/loaderV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="300dp" />

                <Button
                    android:visibility="invisible"
                    android:elevation="5dp"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:text="Tap Here to Reconnect..."
                    android:id="@+id/offlineButton"
                    android:background="@drawable/no_internet"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/refreshButtonNews"
                    android:textColor="#747474"
                    android:visibility="invisible"
                    android:background="@drawable/ic_replay_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsContainer"
                android:background="#f4fafd">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    android:text="#temperature"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/City_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#616161"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/updated_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/City_textView"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#616161"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/refreshButton"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/updated_textView"
                    android:background="@drawable/ic_replay_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <RelativeLayout
                    android:id="@+id/tempFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/updated_textView"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/weather_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#616161"
                        android:textSize="85sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/current_temperature_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#616161"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/details_textView"
                            android:layout_width="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#616161"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/humidity_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#616161"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/pressure_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#616161"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_margin="15dp"
                    android:layout_below="@+id/tempFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/powered_by_google_on_white" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>